}
@section scripts {
    <script type="text/javascript">

        $(document).ready(function () {
            deleteFilter("");
        });

        function doSearch(maxResult) {
            $.ajax({
                url: '@Url.Action("Search", "Home")',
                type: "POST",
                dataType: "html",
                data: {
                    maxResult: maxResult
                },
                success: function (data) {
                    $('div#_RecipeSearchResults').html(data);
                }, // success
                error: function (xhr, textStatus, errorThrown) {
                    //                                                  alert("Error");
                    //                                                  alert(xhr);
                    //                                                  alert(textStatus);
                    //                                                  alert(errorThrown);
                }
            });   // ajax
            $("#query").focus();
        }
    </script>
}
