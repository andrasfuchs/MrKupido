@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<header class="nosearch">
    <a runat="server" href="~/">
        <img runat="server" src="~/Content/svg/mrkupidologo.svg" alt="Mr. Kupido" width="400" height="304" />
    </a>
</header>
<div id="profile">
    <details id="basicinfo" open class="alwaysopen">
        <summary>
            <h1>
                Basic information</h1>
            <h2>
                <a href="#">Why do we need this?</a>
            </h2>
        </summary>
        <ul>
            <li>
                <div class="label">
                    <label for="email">
                        My e-mail address is:</label></div>
                <div class="input">
                    <input type="email" id="email" name="email" required disabled value="andras.fuchs@gmail.com">
                </div>
            </li>
            <li>
                <div class="label">
                    <label for="lastname">
                        My surname is:</label></div>
                <div class="input">
                    <input type="text" id="lastname" name="name" required></div>
            </li>
            <li>
                <div class="label">
                    <label for="firstname">
                        My first name is:</label></div>
                <div class="input">
                    <input type="text" id="firstname" name="email" required></div>
            </li>
            <li>
                <div class="label">
                    <label for="nickname">
                        But please just call me:</label></div>
                <div class="input">
                    <input type="text" id="nickname" name="email" required></div>
            </li>
        </ul>
    </details>
    <details id="physicalinfo">
        <summary>
            <h1>
                Physical details</h1>
            <h2>
                <a href="#">Why should you tell us?</a>
            </h2>
        </summary>
        <ul>
            <li></li>
        </ul>
    </details>
    <details id="likes">
        <summary>
            <h1>
                Your likes and dislikes</h1>
            <h2>
                <a href="#">Why should you tell us?</a>
            </h2>
        </summary>
        <ul>
            <li></li>
        </ul>
    </details>
    <details id="conditions">
        <summary>
            <h1>
                Your conditions</h1>
            <h2>
                <a href="#">Why should you tell us?</a>
            </h2>
        </summary>
        <ul>
            <li></li>
        </ul>
    </details>
</div>
